<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.robertrochford.movieman_v2" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/movieman_l"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/display_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.robertrochford.movieman_v2.DisplaySearchActivity"
            android:label="@string/title_activity_display_search"
            android:parentActivityName="com.example.robertrochford.movieman_v2.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.robertrochford.movieman_v2.MainActivity" />
        </activity>
    </application>

</manifest>
